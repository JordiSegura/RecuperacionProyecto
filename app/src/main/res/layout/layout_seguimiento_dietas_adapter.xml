<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/parent_layout">

    <TextView
        android:id="@+id/borde"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        android:layout_alignBottom="@+id/imgRutina"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-51dp"
        android:background="@drawable/back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imgRutina"
        android:visibility="gone"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/grav"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="Item1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/image_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/grav"
        android:layout_marginEnd="55dp"
        android:textSize="20sp" />



</RelativeLayout>